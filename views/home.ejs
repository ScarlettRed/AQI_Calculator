<html>
    <head>
        <title>
            AQI Calculator
        </title>
        <link rel="stylesheet" href="index.css">
    </head>
    <body>
     <h1>AQI Calculator</h1>
     <form action="/" method = "POST">
    <label for="category">Pollutant: </label>
        <select name="category" id="category">
        <option value="pm10">PM10</option>
        <option value="pm2.5">PM2</option>
        <option value="NO2">NO2</option>
        <option value="03">O3</option>
        <option value="CO">CO</option>
        <option value="SO2">SO2</option>
        <option value="NH3">NH3</option>
        <option value="Pb">Pb</option>
    </select>
    <br>
    <label for="value" class="required">Value(ug/m<sup>3</sup>)</label>
    <input type="text" id="value" name="value">
    <br>
    <input type="submit" value="Calculate">
    </form>
    </body>
    <% if(verified=="true") { %>
    <div class ="subindex">
        <label for="subindex">Sub-Index Value:</label>
        <input type="text" class="subindex" id="subindex" >
       <% } %>
        <div class ="subindex">
        <label for="subindex">Sub-Index Value:</label>
        <%= value %>
    </div>
    <br>
</html>